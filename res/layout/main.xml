<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
   android:id="@+id/scroller" 
   android:layout_width="fill_parent" 
   android:layout_height="fill_parent"
   android:fillViewport="true"
   >
<LinearLayout 
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
<TextView  
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:text="GVCBluetoothApp"
    />

<Button
   android:layout_width="fill_parent"
   android:layout_height="wrap_content"
   android:layout_alignParentBottom="true"
   android:text="1"
   android:onClick="sendSignal"
   android:background="@drawable/blue"
   style="@style/ButtonText"/>
<Button
   android:layout_width="fill_parent"
   android:layout_height="wrap_content"
   android:layout_alignParentBottom="true"
   android:text="2"
   android:onClick="sendSignal"
   android:background="@drawable/red"
   style="@style/ButtonText"/>
<Button
   android:layout_width="fill_parent"
   android:layout_height="wrap_content"
   android:layout_alignParentBottom="true"
   android:text="3"
   android:onClick="sendSignal"
   android:background="@drawable/purple"
   style="@style/ButtonText"/>
<Button
   android:layout_width="fill_parent"
   android:layout_height="wrap_content"
   android:layout_alignParentBottom="true"
   android:text="4"
   android:onClick="sendSignal"
   android:background="@drawable/green"
   style="@style/ButtonText"/>
<Button android:layout_width="fill_parent" android:text="5" android:onClick="sendSignal" android:background="@drawable/yellow" style="@style/ButtonText" android:layout_height="wrap_content"></Button>
<Button
   android:layout_width="fill_parent"
   android:layout_height="wrap_content"
   android:layout_alignParentBottom="true"
   android:text="6"
   android:onClick="sendSignal"
   android:background="@drawable/colora"
   style="@style/ButtonText"/>
<Button
   android:layout_width="fill_parent"
   android:layout_height="wrap_content"
   android:layout_alignParentBottom="true"
   android:text="7"
   android:onClick="sendSignal"
   android:background="@drawable/colorb"
   style="@style/ButtonText"/>
<Button
   android:layout_width="fill_parent"
   android:layout_height="wrap_content"
   android:layout_alignParentBottom="true"
   android:text="8"
   android:onClick="sendSignal"
   android:background="@drawable/colorc"
   style="@style/ButtonText"/>
</LinearLayout>
</ScrollView>